        <h2>Liste des catégories d'entreprises</h2>
        {% for rse in rses %}
            <p>{{ rse.name }}</p>
        {% endfor %}
    </div>
    {#~~~~~~~~~~#}
</div>
    {#Bouton "Retour à l'annuaire"#}
    <div class="input-group-append">
        <a href="{{ path('expert_annuary') }}" class="btn btn-primary btn-outline-success" type="submit">Retour à l'annuaire</a>
    </div>
    {#~~~~~#}
{% endblock %}
