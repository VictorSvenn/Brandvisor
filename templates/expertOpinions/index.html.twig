{% extends 'base.html.twig' %}

{% block title %}Annuaire d'expert{% endblock %}

{% block body %}
    <div class="container-fluid d-flex">
        {# SideBar de recherche #}
        <div class="container-fluid col-3">
            {#Formulaire de recherche#}
            <form method="post" action="" class="col-12">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Rechercher par nom..."
                           aria-label="Recipient's username" aria-describedby="basic-addon2" name="searchText">
                </div>
                {#~~~~~~~~~#}
                {#Bouton "Rechercher"#}
                <div class="input-group-append">
                    <input class="btn bg-light btn-outline-success" type="submit" value="Rechercher" name="indexSearch">
                </div>
                {#~~~~~#}
            </form>
            {#Bouton "Consulter les catégories"#}
            <div class="input-group-append mt-5">
                <a href="{{ path('expert_categories') }}" class="btn bg-light btn-outline-success" type="submit">Consulter les catégories</a>
            </div>
            {#~~~~~#}
        </div>
        {# Affichage du contenu de la recherche #}
        <div class="container-fluid col-9">
            <div class="row d-flex">
                {% for expert in experts %}
                    <div class="card col-4 mx-auto">
                        <div class="card-body p-1">
                            <h5 class="card-title">{{ expert.user.fullname }}</h5>
                            <h6 class="card-subtitle text-muted">{{ expert.connectingStructure }}</h6>
                            <p class="card-text">{{ expert.website }}</p>
                            <p class="card-text">{{ expert.expertiseAreas }}</p>
                            <p class="card-text">{{ expert.phone }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
