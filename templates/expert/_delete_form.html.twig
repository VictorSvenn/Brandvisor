<form method="post" action="{{ path('expert_delete', {'id': expert.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ expert.id) }}">
    <button class="btn">Supprimer mon compte</button>
</form>
