            <!-- Grid row-->
            <div class="row d-flex justify-content-center pt-3 mb-1">

                <!-- Grid column -->
                <div class="col-md-2 ">
                    <h6 class="text-uppercase font-weight-bold">
                        <a href="#">Presse</a>
                    </h6>
                </div>
                <!-- Grid column -->

                <!-- Grid column -->
                <div class="col-md-2 ">
                    <h6 class="text-uppercase font-weight-bold">
                        <a href="#">CGU</a>
                    </h6>
                </div>
                <!-- Grid column -->

                <!-- Grid column -->
                <div class="col-md-3 ">
                    <h6 class="text-uppercase font-weight-bold">
                        <a href="#">Mentions Légales</a>
                    </h6>
                </div>
                <!-- Grid column -->

                <!-- Grid column -->
                <div class="col-md-2 ">
                    <h6 class="text-uppercase font-weight-bold">
                        <a href="#">Contact</a>
                    </h6>
                </div>
                <!-- Grid column -->

                <!-- Grid column -->
                <div class="col-md-2 ">
                    <h6 class="text-uppercase font-weight-bold">
                        <a href="#">Recrutement</a>
                    </h6>
                </div>
                <!-- Grid column -->

            </div>
            {% endblock %}
</body>
</html>
