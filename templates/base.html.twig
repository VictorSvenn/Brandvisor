<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.css"
              integrity="sha256-7VVaJ5GDwFQiLIc+eNksQLUSSY5JNZtqv9o2BI8UGYg=" crossorigin="anonymous"/>
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
              rel="stylesheet" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
              crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/build/app.css"/>
    {% endblock %}

    {% block head %}
        <nav class="navbar navbar-light sticky-top bg-lightGreen">
            <a class="navbar-brand" href="/">
                <img src={{ asset( 'images/Android_O_Preview_Logo.png' ) }} width="30" height="30"
                     class="d-inline-block align-top" alt="">
                Brandvisor
            </a>
            <form class="form-inline">
                {% if app.user %}
                    <a href="{{ path ('app_logout') }}" class="btn btn-outline-success my-2 my-sm-0 bg-dark" type="submit">Se déconnecter</a>
                {% else %}
                    <a href="{{ path ('app_login') }}" class="btn btn-outline-success my-2 my-sm-0 bg-dark" type="submit">Se Connecter</a>
                {% endif %}
                <a href="#" class="btn btn-outline-success my-2 my-sm-0 bg-dark" type="submit">Anglais/Français</a>
                <a class="navbar-brand p-2" href="#">
                    <img src="{{ asset('images/User_Avatar_2.png') }}" width="30" height="30"
                         alt="MyAccount">
                </a>
            </form>
        </nav>
    {% endblock %}
</head>


<body>
<div class="col-8 offset-2 p-3">
    {% block body %}{% endblock %}

    {% block javascripts %}
    {% endblock %}

    {% block footer %}
