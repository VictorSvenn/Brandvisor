{% extends 'base.html.twig' %}

{% block title %}Offres d'emploi{% endblock %}

{% block body %}
    <div class="text-center p-5">
        <h1>Offres d'emploi</h1>
    </div>
    
    <div class="container-fluid px-5 pb-5">
        {% for recruitment in recruitments %}
            <div class="card" style="width: 22rem;">
                <img class="card-img-top" src="{{ asset('uploads/' ~ recruitment.image) }}" alt="Card image cap">
                <div class="card-body">
                <h5 class="card-title">{{ recruitment.name }}</h5>
                <p class="card-text">{{ recruitment.content }}</p>
                    <div class="row">
                        <a href={{ recruitment.link }} class="btn btn-success ml-2 mr-auto">Lien</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        {% include 'recruitment/_delete_form.html.twig' %}
                    {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="pl-5">
                <p>Aucune offre disponible pour le moment.</p>
            </div>
        {% endfor %}
    </div>
{% endblock %}
