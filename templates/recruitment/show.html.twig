{% extends 'base.html.twig' %}

{% block title %}Recruitment{% endblock %}

{% block body %}
    <h1>Recruitment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recruitment.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recruitment.name }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ recruitment.link }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ recruitment.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('uploads/' ~ recruitment.image) }}" width="100%" alt=""></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('recruitment_index') }}">back to list</a>

    <a href="{{ path('recruitment_edit', {'id': recruitment.id}) }}">edit</a>

    {{ include('recruitment/_delete_form.html.twig') }}
