{% extends 'base.html.twig' %}

{% block title %}Challenge{% endblock %}

{% block body %}
    <h1>Challenge</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ challenge.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ challenge.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ challenge.description }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ challenge.comment }}</td>
            </tr>
            <tr>
                <th>IsConform</th>
                <td>{{ challenge.isConform ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Documents</th>
                <td>{{ challenge.documents ? challenge.documents|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('challenge_index') }}">back to list</a>

    <a href="{{ path('challenge_edit', {'id': challenge.id}) }}">edit</a>

    {{ include('challenge/_delete_form.html.twig') }}
{% endblock %}
