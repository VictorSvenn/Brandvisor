{% extends 'base.html.twig' %}

{% block title %}Tous les challenges{% endblock %}

{% block body %}
    <div class="text-center p-5">
        <h1>Tous les challenges</h1>
    </div>

    <div class="row justify-content-center">
        {% for challenge in challenges %}
            <div class="card col-sm-12 col-md-5 col-lg-4 my-3 mx-3">
                <div class="card-body">
                    <h5 class="card-title font-weight-bold">{{ challenge.name }}</h5>
                    <p class="card-text text-justify">{{ challenge.description }}</p>
                    <a href="{{ path('challenge_show', {'id': challenge.id}) }}" class="btn btn-success">Voir</a>
                </div>
            </div>
        {% else %}
            <div class="pl-5">
                <p>Aucune offre disponible pour le moment.</p>
            </div>
        {% endfor %}
        <div class="p-2 text-center">
            <a href="{{ path('challenge_new') }}">Cr√©er un nouveau challenge</a>
        </div>
    </div>
{% endblock %}
