{% extends 'base.html.twig' %}

{% block title %}Tous les challenges{% endblock %}

{% block body %}
    <div class="text-center p-5">
        <h1>Tous les challenges</h1>
    </div>

    <div class="p-2 text-center">
        <a href="{{ path('challenge_new') }}" class="btn btn-success">Cr√©er un nouveau challenge</a>
    </div>

    <div class="row justify-content-center">
        {% for challenge in challenges %}
            <div class="card col-sm-12 col-md-5 col-lg-4 my-3 mx-3">
                <div class="card-body">
                    <h5 class="card-title font-weight-bold text-center">{{ challenge.name }}</h5>
                    {% if challenge.getResponse() != null %}<p class="card-text small text-center">‚úîÔ∏è R√©pondu</p>
                    {% else %} <p class="card-text small text-center py-2">üî¥ En attente de r√©ponse</p>
                    {% endif %}
                    <p class="card-text text-justify">{{ challenge.description }}</p>
                    <div class="text-right">
                        <a href="{{ path('challenge_show', {'id': challenge.id}) }}" class="btn btn-success">Voir</a>
                    </div>
                    
                </div>
            </div>
        {% else %}
            <div class="pl-5">
                <p>Aucun challenge pour le moment.</p>
            </div>
        {% endfor %}
    </div>
{% endblock %}
