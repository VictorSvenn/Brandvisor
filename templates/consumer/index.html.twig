{% extends 'base.html.twig' %}

{% block title %}Consumer index{% endblock %}

{% block body %}
    <h1>Consumer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>GeographicArea</th>
                <th>BirthDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for consumer in consumers %}
            <tr>
                <td>{{ consumer.id }}</td>
                <td>{{ consumer.geographicArea }}</td>
                <td>{{ consumer.birthDate ? consumer.birthDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('consumer_show', {'id': consumer.id}) }}">show</a>
                    <a href="{{ path('consumer_edit', {'id': consumer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('consumer_new') }}">Create new</a>
{% endblock %}
