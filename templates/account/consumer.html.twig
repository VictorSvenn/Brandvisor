{% extends 'base.html.twig' %}

{% block title %}Mon compte: {{ app.user.firstName }}{% endblock %}

{% block body %}
<div class="container mx-auto">
    <div class="row mx-auto text-center">
        <h1 class="text-center mx-auto my-5">Mon compte</h1>
    </div>
</div>

<div class="container-fluid">
    <div class="row justify-content-center flex-column flex-lg-row mb-5">
        <a href="{{ path('consumer_edit', {'id': consumer.id}) }}" class="navbar-brand btn btn-outline-primary">Modifier
            mes infos</a>
        <a href="{{ path('consumer_favs') }}" class="navbar-brand btn btn-outline-primary">Mes favoris</a>
        <a href="{{ path('initiative_new') }}" class="navbar-brand btn btn-outline-primary">Déposer une initiative</a>
        <a href="{{ path('opinion_new') }}" class="navbar-brand btn btn-outline-primary">Déposer un avis</a>
        <a href="{{ path('challenge_new') }}" class="navbar-brand btn btn-outline-primary">Challenger une entreprise</a>
        <a href="{{ path('recommandation_index') }}" class="navbar-brand btn btn-outline-primary">Recommandations</a>
    </div>
</div>
<div class="container col-8">
    <table class="table table-striped">
        <tbody>
            <tr>
                <th scope="row" class="font-weight-bold border-0">Prénom :</th>
                <td class="font-weight-light border-0">{{ app.user.firstName }}</td>
            </tr>
            <tr>
                <th scope="row" class="font-weight-bold border-0">Nom :</th>
                <td class="font-weight-light border-0">{{ app.user.lastName }}</td>
            </tr>
            <tr>
                <th scope="row" class="font-weight-bold border-0">Date de naissance :</th>
                <td class="font-weight-light border-0">{{ app.user.consumer.birthDate|date("d/m/Y") }}</td>
            </tr>
            <tr>
                <th scope="row" class="font-weight-bold border-0">Zone géographique :</th>
                <td class="font-weight-light border-0">{{ app.user.consumer.geographicArea }}</td>
            </tr>
        </tbody>
    </table>
</div>
</div>
</div>
{% endblock %}