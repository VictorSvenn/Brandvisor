{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}
    <div class="container-fluid bg-white px-5 py-5">
        <div class="container-fluid">
            <div class="row col-5 mx-auto">
                <h1 class="mx-auto text-center">Mon compte</h1>
            </div>
            <div class="row col-8 mx-auto">
                <p class="mx-auto text-center">M./Mme. {{ user.lastName }} {{ user.firstName }}
                    , {{ user.enterprise.name }} {{ user.email }}</p>
            </div>
            <div class="row col-12">
                <ul class="nav justify-content-around mx-auto">
                    <li class="nav-item mx-auto" style="border: black 1px solid">
                        <a class="nav-link" href="#">Modifier mes informations</a>
                    </li>
                    <li class="nav-item mx-auto" style="border: black 1px solid">
                        <a class="nav-link" href="#">Déposer un engagement</a>
                    </li>
                    <li class="nav-item mx-auto"style="border: black 1px solid">
                        <a class="nav-link" href="#">Avis sur mon entreprise</a>
                    </li>
                    <li class="nav-item mx-auto" style="border: black 1px solid">
                        <a class="nav-link" href="#">Challenge</a>
                    </li>
                    <li class="nav-item mx-auto" style="border: black 1px solid">
                        <a class="nav-link" href="#">Déposer une initiative</a>
                    </li>
                </ul>
            </div>
        </div>
        <hr>
        <div class="row px-2 py-2" style="background-color: rgba(128,128,128,0.25)">
            <div class="container-fluid col-5">
                <div class="row">
                    <p class="font-weight-bold">Adresse : </p><p class="mx-2"> {{ user.enterprise.adress }}</p>
                </div>
                <div class="row">
                    <p class="font-weight-bold">Téléphone : </p><p class="mx-2"> {{ user.enterprise.enterprisePhone }}</p>
                </div>
                <div class="row">
                    <p class="font-weight-bold">Nom de l'entreprise : </p><p class="mx-2"> {{ user.enterprise.name }}</p>
                </div>
                <div class="row">
                    <p class="font-weight-bold">Fonction : </p><p class="mx-2"> {{ user.enterprise.contactFunction }}</p>
                </div>
                <div class="row">
                    <p class="font-weight-bold">Catégorie de l'entreprise : </p><p class="mx-2"> {{ user.enterprise.type.name }}</p>
                </div>
                <div class="row">
                    <p class="font-weight-bold"> Site web de l'entreprise : </p><a
                                href="{{ user.enterprise.website }}" class="mx-2"> {{ user.enterprise.website }}</a>
                </div>
                <div class="row">
                    <p class="font-weight-bold">Documents utiles : </p>
                </div>
                {% for document in user.enterprise.documents %}
                    <div class="row">
                        <a class="mx-2" href="{{ document }}">{{ document }}</a>
                    </div>
                {% endfor %}
            </div>
            <div class="container-fluid col-3 mx-auto my-auto ">
                <img src="{{ asset( 'images/logo.png' ) }}" class="img-thumbnail">
            </div>
        </div>
        <hr>
        <div class="row justify-content-around my-5 mb-5">
            {% for engagement in enterprise.engagements %}
                <div class="container-fluid col-3 border border-dark">
                    <div class="row mx-auto">
                        <h3 class="text-center mx-auto">{{ engagement.name }}</h3>
                    </div>
                    <div class="row">
                        <p class="px-2">{{ engagement.actionText }}</p>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
{% endblock %}
