{% extends 'base.html.twig' %}

{% block title %}Opinion{% endblock %}

{% block body %}
    <h1>Opinion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ opinion.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ opinion.text }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ opinion.date ? opinion.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>IsConform</th>
                <td>{{ opinion.isConform ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('opinion_index') }}">back to list</a>

    <a href="{{ path('opinion_edit', {'id': opinion.id}) }}">edit</a>

